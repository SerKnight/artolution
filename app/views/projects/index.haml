.padding-50.container
  / Page Heading/Breadcrumbs
  .row
    .col-lg-12
      - if params[:q]
        %h1.page-header
          ARTOLUTION Search:
          %small= params['q']['title_or_description_or_body_cont']
      - else
        %h1.page-header
          ARTOLUTION
        %small Projects
      %ol.breadcrumb
        %li= link_to 'Home', root_path
        %li.active Projects
  / /.row
  .row
    / Blog Entries Column
    .col-md-8
      / First Blog Post
      - @projects.each do |project|
        .blogpost
          %h2
            %a{:href => '#'}= project.title
          %p.lead
            - if project.artists.count > 1
              = "by #{project.artists.map{|p| p.name }}"
            - elsif project.artists.count == 1
              = "by #{project.artists.first.name}"
            - else
              by the Artolution
          %p
            %i.fa.fa-newspaper-o
            = link_to project.category.name, "/category/#{project.category.slug}"
          
          = link_to project_path(project) do
            %img.img-responsive.img-hover{:alt => "", :height => "236", :src => project.hero(:medium), :width => "100%"}
          %hr/
          %p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolore, veritatis, tempora, necessitatibus inventore nisi quam quia repellat ut tempore laborum possimus eum dicta id animi corrupti debitis ipsum officiis rerum.
          = link_to project_path(project), class: 'btn btn-primary' do
            Read More
            %i.fa.fa-angle-right
          %hr

      / Pager
      %ul.pager
        %li.previous
          %a{:href => "#"} ← Older
        %li.next
          %a{:href => "#"} Newer →
    / Blog Sidebar Widgets Column
    .col-md-4
      / Blog Search Well
      .well
        %h4 
          Project Search
          = search_form_for @q do |f|
            \#{f.label :name_or_description_or_email_or_articles_title_cont}#{f.search_field :title_or_description_or_body_cont}#{f.submit}
            / .input-group
            /   %input.form-control{:type => "text", name: :title_or_description_or_body_cont}
            /   %span.input-group-btn
            /     = f.submit do
            /       %button.btn.btn-default{:type => "button"}
            /         %i.fa.fa-search
        / /.input-group
      / Blog Categories Well
      .well
        %h4 Blog Categories
        .row
          .col-lg-6
            %ul.list-unstyled
              - @categories.each do |cat|
                %li
                  %a{:href => "/category/#{cat.slug}"}= cat.name
          / /.col-lg-6
        / /.row
      / Side Widget Well
      .well
        %h4 Side Widget Well
        %p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Inventore, perspiciatis adipisci accusamus laudantium odit aliquam repellat tempore quos aspernatur vero.
  / /.row
/ /.container