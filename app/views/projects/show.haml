/ Page Content
.container.padding-50
  / Page Heading/Breadcrumbs
  .row
    .col-lg-12
      %h1.page-header
        = @project.title
        %small
          - if @project.artists.count > 1
            = "by #{@project.artists.map{|p| p.name }}"
          - elsif @project.artists.count == 1
            = "by #{@project.artists.first.name}"
          - else
            by the Artolution

      %ol.breadcrumb
        %li= link_to 'Home', root_path
        %li= link_to @project.category.name, "/category/#{@project.category.slug}"
        %li.active= @project.title
  / /.row
  / Content Row
  .row
    / Blog Post Content Column
    .col-lg-8
      %p
        %i.fa.fa-newspaper-o
        = link_to @project.category.name, "/category/#{@project.category.slug}"
      %hr
      / Preview Image
      %img.img-responsive{:alt => "", :src => @project.hero{:large}}
      %hr
      / Post Content
      %p.lead= @project.body[0..200]
      
      %p= @project.body[200..-1]

      .well
        #disqus_thread
        :javascript
          /**
          * RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
          * LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables
          */
          /*
          var disqus_config = function () {
          this.page.url = http://artolution.herokuapp.com; // Replace PAGE_URL with your page's canonical URL variable
          this.page.identifier = PAGE_IDENTIFIER; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
          };
          */
          (function() { // DON'T EDIT BELOW THIS LINE
          var d = document, s = d.createElement('script');
          
          s.src = '//artolution.disqus.com/embed.js';
          
          s.setAttribute('data-timestamp', +new Date());
          (d.head || d.body).appendChild(s);
          })();
        %noscript
          Please enable JavaScript to view the
          %a{:href => "https://disqus.com/?ref_noscript", :rel => "nofollow"} comments powered by Disqus.
    / Blog Sidebar Widgets Column
    .col-md-4#sidewall-blog-index
      / Blog Search Well
      .well.relative
        %h4 Categories
        .row#project-categories
          .col-lg-12
            %ul.list-unstyled
              - @categories.each do |cat|
                %a{:href => "/category/#{cat.slug}"}
                  %li.relative= cat.name
          / /.col-lg-6
        / /.row
      / Side Widget Well
      .well#social-well.relative
        %a{href: 'https://www.instagram.com/artolution/', target: '_blank'}
          %i.fa.fa-instagram{"aria-hidden" => "true"} 
        %a{href: 'https://www.facebook.com/artolution/', target: '_blank'}
          %i.fa.fa-facebook{"aria-hidden" => "true"} 
        %a{href: 'https://www.twitter.com/theartolution/', target: '_blank'}
          %i.fa.fa-twitter{"aria-hidden" => "true"} 
        %a{href: 'https://www.linkedin.com/in/max-levi-frieder-72649038', target: '_blank'}
          %i.fa.fa-linkedin{"aria-hidden" => "true"} 


:javascript
  document.addEventListener("turbolinks:load", function() {
    $(document).ready(blogPostInit());
    $(document).on('page:load', blogPostInit());
  });