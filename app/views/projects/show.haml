/ Page Content
.container.padding-50
  / Page Heading/Breadcrumbs
  .row
    .col-lg-12
      %h1.page-header
        = @project.title
        %small
          - if @project.artists.count > 1
            = "by #{@project.artists.map{|p| p.name }}"
          - elsif @project.artists.count == 1
            = "by #{@project.artists.first.name}"
          - else
            by the Artolution

      %ol.breadcrumb
        %li= link_to 'Home', root_path
        %li= link_to @project.category.name, "/category/#{@project.category.slug}"
        %li.active= @project.title
  / /.row
  / Content Row
